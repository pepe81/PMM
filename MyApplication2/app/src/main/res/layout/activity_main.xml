<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/pizarra"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cantidad: "
        android:textColor="#FFFFFF"
        android:id="@+id/tvCantidad"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="205dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Porcentaje: "
        android:textColor="#FFFFFF"
        android:id="@+id/tvPorcentaje"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:id="@+id/etCantidad"
        android:layout_alignBottom="@+id/tvCantidad"
        android:layout_toRightOf="@+id/tvCantidad"
        android:layout_toEndOf="@+id/tvCantidad" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:id="@+id/etPorcentaje"
        android:layout_alignBottom="@+id/tvPorcentaje"
        android:layout_toRightOf="@+id/tvPorcentaje"
        android:layout_toEndOf="@+id/tvPorcentaje" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:layout_below="@+id/tvPorcentaje"
        android:layout_alignRight="@+id/etPorcentaje"
        android:layout_alignEnd="@+id/etPorcentaje"
        android:layout_marginTop="38dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±adir"
            android:textColor="#FFFFFF"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitar"
            android:textColor="#FFFFFF"
            android:id="@+id/radioButton2" />

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#FFFFFF"
        android:id="@+id/tvResultado"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/etPorcentaje"
        android:layout_alignEnd="@+id/etPorcentaje" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado: "
        android:textColor="#FFFFFF"
        android:id="@+id/textView3"
        android:layout_below="@+id/rg"
        android:layout_marginTop="49dp" />

</RelativeLayout>
