<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Calculo"
    android:background="@drawable/pizarra">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cantidad: "
        android:textColor="@android:color/white"
        android:id="@+id/tvCantidad"
        android:layout_marginTop="127dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Porcentaje: "
        android:textColor="@android:color/white"
        android:id="@+id/tvPorcentaje"
        android:layout_below="@+id/tvCantidad"
        android:layout_marginTop="61dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textColor="@android:color/white"
        android:id="@+id/etCantidad"
        android:layout_alignBottom="@+id/tvCantidad"
        android:layout_toRightOf="@+id/tvCantidad"
        android:layout_toEndOf="@+id/tvCantidad" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textColor="@android:color/white"
        android:id="@+id/etPorcentaje"
        android:layout_alignBottom="@+id/tvPorcentaje"
        android:layout_toRightOf="@+id/tvPorcentaje"
        android:layout_toEndOf="@+id/tvPorcentaje" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tvPorcentaje"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±adir"
            android:textColor="@android:color/white"
            android:id="@+id/rbAnadir"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitar"
            android:textColor="@android:color/white"
            android:id="@+id/rbQuitar"
            android:layout_gravity="center_horizontal" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado: "
        android:textColor="@android:color/white"
        android:id="@+id/textView3"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="@android:color/white"
        android:id="@+id/tvResultado"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />
</RelativeLayout>
