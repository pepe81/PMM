<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/lbValor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edValor1"
        android:layout_below="@+id/tv1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/lbValor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:layout_below="@+id/edValor1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edValor2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv2"
        android:layout_alignParentLeft="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edValor2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:id="@+id/radioGroup"
        android:layout_alignEnd="@+id/btOperar">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumar"
            android:id="@+id/rbSumar" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restar"
            android:id="@+id/rbRestar" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btOperar"
        android:text="Operar"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:id="@+id/tvResultado"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa para divertirte!!!"
        android:id="@+id/cbPulsa"
        android:checked="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tvResultado"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_below="@+id/cbPulsa"
        android:layout_toEndOf="@+id/edValor2"
        android:visibility="invisible"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>
