<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pldesigns.examen2eval.MainActivity2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zona:"
        android:id="@+id/tv1"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivZona"
        android:layout_toEndOf="@+id/ivZona" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivZona"
        android:layout_alignTop="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tvZona"
        android:layout_alignBottom="@+id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tarifa:"
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:layout_toRightOf="@+id/ivZona"
        android:layout_toEndOf="@+id/ivZona" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tvTarifa"
        android:layout_alignBottom="@+id/tv2"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignRight="@+id/tvZona"
        android:layout_alignEnd="@+id/tvZona" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Peso:"
        android:id="@+id/tv3"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@+id/ivZona"
        android:layout_toEndOf="@+id/ivZona" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tvPeso"
        android:layout_alignBottom="@+id/tv3"
        android:layout_toRightOf="@+id/tv3"
        android:layout_alignRight="@+id/tvZona"
        android:layout_alignEnd="@+id/tvZona" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Decoracion:"
        android:id="@+id/tv4"
        android:layout_below="@+id/ivZona"
        android:layout_toRightOf="@+id/ivZona"
        android:layout_toEndOf="@+id/ivZona" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tvDecoracion"
        android:layout_alignBottom="@+id/tv4"
        android:layout_toRightOf="@+id/tv4"
        android:layout_alignRight="@+id/tvPeso"
        android:layout_alignEnd="@+id/tvPeso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coste final:"
        android:id="@+id/tv5"
        android:layout_below="@+id/tv4"
        android:layout_alignLeft="@+id/tv4"
        android:layout_alignStart="@+id/tv4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/tvCoste"
        android:layout_alignBottom="@+id/tv5"
        android:layout_toRightOf="@+id/tv5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
