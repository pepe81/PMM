<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbRojo"
        android:textOn="Rojo"
        android:textOff="NO Rojo"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tbAzul" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbAzul"
        android:textOff="NO Azul"
        android:textOn="Azul"
        android:layout_alignTop="@+id/tbRojo"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbVerde"
        android:textOff="NO Verde"
        android:textOn="Verde"
        android:layout_alignTop="@+id/tbAzul"
        android:layout_toEndOf="@+id/tbAzul" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tbRojo"
        android:layout_toStartOf="@+id/tbVerde"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvPantalla"/>
</RelativeLayout>
